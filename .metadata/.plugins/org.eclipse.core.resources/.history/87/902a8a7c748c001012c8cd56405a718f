package day10;

import java.util.Scanner;

public class Exam01 {

    public static void main(String[] args) {
        Product[] products = new Product[10];
        Scanner scan = new Scanner(System.in);

        char c = 'y';
        int cnt = 0;

        while (c != 'n') {
            if (cnt >= products.length) {
                System.out.println("더 이상 상품을 등록할 수 없습니다.");
                break;
            }

            System.out.print("상품등록(y/n) > ");
            c = scan.next().charAt(0);

            if (c == 'y') {
                System.out.print("상품명 > ");
                String name = scan.next();

                System.out.print("가격 > ");
                int price = scan.nextInt();

                products[cnt] = new Product(name, price);
                cnt++;
            } else if (c == 'n') {
                System.out.println("상품등록을 종료합니다.");
                break;
            } else {
                System.out.println("y/n만 가능합니다.");
            }
        }

        System.out.println("\n등록된 상품 목록:");
        for (int i = 0; i < products.length; i++) {
            System.out.println("상품명: " + products[i].getName() + ", 가격: " + products[i].getPrice());
        }

        scan.close();
    }
}
