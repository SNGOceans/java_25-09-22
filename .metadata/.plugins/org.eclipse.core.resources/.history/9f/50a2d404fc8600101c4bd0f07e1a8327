package day06;

import java.util.Arrays;

public class ArrayEx04 {

	public static void main(String[] args) {
		// 10개짜리 정수 배열 만들어보기 => 1부터 100까지의 랜덤 수를 저장 => 출력
		// 오름차순 정렬 후 출력
		
		int[] arr = new int[10];
		
		for(int i=0; i<arr.length; i++) {
			arr[i] = (int)(Math.random()*100);
		}
		System.out.println(Arrays.toString(arr));
		
		Arrays.sort(arr);
//		for(int i=0; i<arr.length-1; i++) {
//        	for(int j=i+1; j<arr.length; j++) {
//        		if (arr[i] > arr[j]) {
//        			int tmp = arr[i];
//        			arr[i] = arr[j];
//        			arr[j] = tmp;
//        		}
//        	}
//        }
		System.out.println(Arrays.toString(arr));
		
		// [5, 3, 1, 2, 4]
		// [3, 5, 1, 2, 4] Step1
		// [1, 5, 3, 2, 4] Step2
		// [1, 3, 5, 2, 4] Step3
		// [1, 2, 5, 3, 4] Step4
		// [1, 2, 3, 5, 4] Step5
		// [1, 2, 3, 4, 5] Step6
	}

}
