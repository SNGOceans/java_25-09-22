package advancedDictionaryManager;

import java.util.Scanner;

public interface DictionaryProgram {
	/*1.단어등록|2.단어검색|3.단어수정|4.단어출력|5.단어삭제|6.종료
	 * WordController 생성하여 Map을 멤버변수로 선언하여 메서드로 구현
	 * 기본 단어 5가지 등록, 추가 등록 시 6번째 단어로 등록되도록.
	 */
	void addDict(Scanner scan);      // 단어 등록
    void searchVoca(Scanner scan);      // 단어 검색
    void reviseMeaning(Scanner scan);      // 단어 수정
    void printVoca();      // 전체 단어 출력
    void deleteVoca(Scanner scan);      // 단어 삭제
}