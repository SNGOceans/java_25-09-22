package day07;

import java.util.Scanner;

public class MethodEx01 {

	public static void main(String[] args) {
		/* 계산기 만들기
		 * --menu--
		 * 1. 덧셈|2. 뺄셈|3. 곱셈|4. 나눗셈|5. 나머지|6. 종료
		 * >> 메뉴선택 > 1
		 * >> 숫자 입력(두 정수) > 1 5
		 * >> 결과 1 + 5 = 6
		 * 
		 * 덧셈, 뺄셈, 곱셈, 나눗셈, 나머지는 Method03에서 만든 메서드를 호출
		 */
		while(true) {
			Scanner scan = new Scanner(System.in);
			System.out.println("산수 종류를 입력하세요>");
			System.out.println("1. 덧셈 |2. 뺄셈 |3. 곱셈 |4. 나눗셈 |5. 나머지 |6. 종료");
			
			String input = scan.next();
			scan.nextLine();
			int user_input = Integer.parseInt(input);
			
			if (user_input == 6) {
			    System.out.println("계산기를 종료합니다.");
			    break;
			}
			
			System.out.println("숫자를 입력하세요");
			
			String inputNum = scan.nextLine(); // 한 줄 입력 받기
			String[] tokens = inputNum.trim().split(" "); // 문자 나누기
			
			int[] numbers = new int[tokens.length]; // 학생 이름
			
			for(int i=0; i<tokens.length; i++) {
			    numbers[i] = Integer.parseInt(tokens[i]); // 문자열 → 정수 변환
			}
			
			// 두 수의 + - * / % 의 결과를 메서드를 호출하여 출력
			int add_var = 0, minus_var = 0, times_var = 0, remainder_var = 0;
			double div_var = 0;
			Method03 m = new Method03(); // main 안에서 클래스를 객체화
			
			if(div_var ==-9999999.0 || remainder_var==-9999999) {
				System.out.println("계산 오류입니다. 0으로 나누거나 나머지를 구할 수 없습니다.");
			} 
						
			switch (user_input) {
		    case 1:
		        add_var = m.add(numbers[0], numbers[1]);
		        break;
		    case 2:
		        minus_var = m.minus(numbers[0], numbers[1]);
		        break;
		    case 3:
		        times_var = m.times(numbers[0], numbers[1]);
		        break;
		    case 4:
		        div_var = m.division(numbers[0], numbers[1]);
		        break;
		    case 5:
		        remainder_var = m.remainder(numbers[0], numbers[1]);
		        break;
		    default:
		        System.out.println("계산기를 종료합니다.");
		        break;
			}		
					
		System.out.println("합계 : "+add_var+" 뺄셈 : "+minus_var+" 곱셈 : "+times_var);
		System.out.println("나눗셈 : "+div_var+" 나머지 : "+remainder_var);
		}
	}

}
