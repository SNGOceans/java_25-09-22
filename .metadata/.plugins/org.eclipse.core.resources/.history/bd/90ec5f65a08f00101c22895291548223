package day14;

import java.util.HashMap;
import java.util.Map;

public class Map01 {

    public static void main(String[] args) {
        // Map : key/value 쌍으로 저장 (key 중복 불가, value 중복 가능)
        Map<String, Integer> map = new HashMap<>();

        // 과일 이름과 가격 추가
        map.put("사과", 2000);
        map.put("바나나", 2500);
        map.put("귤", 1800);
        map.put("복숭아", 3000);
        map.put("포도", 3500);
        map.put("포도",2500)

        // 전체 출력
        System.out.println("--- 과일 가격 목록 ---");
        for (String key : map.keySet()) {
            System.out.println(key + " : " + map.get(key) + "원");
        }
    }
}
