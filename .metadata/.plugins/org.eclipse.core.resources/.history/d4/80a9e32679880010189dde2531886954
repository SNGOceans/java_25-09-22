package day07;

import java.util.Arrays;

public class MethodEx02 {
	
	public void print (int[] array) {
		System.out.println(Arrays.toString(array));
	}
	
	public int[] sort(int[] arr) {
		int[] result = new int[arr.length];
		for(int i=0; i<arr.length-1; i++) {
	    	for(int j=i+1; j<arr.length; j++) {
	    		if (arr[i] > arr[j]) {
	    			int tmp = arr[i];
	    			arr[i] = arr[j];
	    			arr[j] = tmp;
	    		}
	    	}
	    }
		result = arr;
		System.out.println(Arrays.toString(result));
		return result;
	}
	
	public void stat(int[] array) {
		int sum = 0, average = 0, max = array[0], min = array[0];
		for(int i=0; i<array.length; i++) {
			sum +=array[i];
			if (array[i] > max) {
	            max = array[i];
	        } else if (array[i]<min) {
	        	min = array[i];
	        }
		}
		average = sum/array.length;
		System.out.println("합계 : "+sum+" | 평균 : "+average+" | 최댓값 : "+max+" 최솟값 : "+min);
	}

	public static void main(String[] args) {
		// 메서드 생성
		// 1. 배열을 받아 배열을 출력하는 메서드
		// 2. 배열을 받아 해당 배열을 오름차순으로 정렬하는 메서드
		// 3. 배열을 받아 배열의 합계와, 평균, 최대, 최소를 출력하는 메서드
		int[] arr = {78,56,36,45,25,42,34,56,78,97,25,38,99,35};
		
		MethodEx02 m = new MethodEx02();
		
		m.print(arr);
		int[] sorted_array = new int[arr.length];
		
		sorted_array = m.sort(arr);
		m.stat(sorted_array);
	}

}
