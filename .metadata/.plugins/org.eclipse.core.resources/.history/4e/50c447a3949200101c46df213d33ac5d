package day15;

import java.util.Scanner;

public class SaleMain {

    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        SaleController controller = new SaleController();

        while (true) {
            System.out.println("\n===== 메뉴 주문 프로그램 =====");
            System.out.println("1. 메뉴 추가");
            System.out.println("2. 메뉴 보기");
            System.out.println("3. 제품 주문");
            System.out.println("4. 주문 내역 보기");
            System.out.println("5. 종료");
            System.out.print("선택 >> ");

            int choice = scan.nextInt();

            switch (choice) 
            	{case 1: controller.addMenu(scan); break;
                case 2: controller.printMenu(); break;
                case 3: controller.orderProduct(scan); break;
                case 4: controller.printOrderList(); break;
                case 5: System.out.println("프로그램을 종료합니다."); scan.close(); return;
                default: System.out.println("잘못된 선택입니다. 다시 입력해주세요.");
            }
        }
    }
}
