package day07;

public class Method03 {

	public int add(int num1, int num2) {
		return num1 + num2;
	}
	
	public int minus(int num1, int num2) {
		return num1 - num2;
	}
	
	public int times(int num1, int num2) {
		return num1 * num2;
	}
	
	public double division(int num1, int num2) {
		double result = 0;
		if(num2 ==0) {
			System.out.println("Infinity");
		} else {
			return (double)num1 / num2;
		}
		return result;
	}
	
	public int remainder(int num1, int num2) {
		return num1 % num2;
	}
	
	public static void main(String[] args) {
		// + - * / % 기능을 하는 메서드를 생성
		// main에서 호출 => 출력
		
		int num1 = 10, num2 = 20;
		// 두 수의 + - * / % 의 결과를 메서드를 호출하여 출력
		int add_var = 0, minus_var = 0, times_var = 0, remainder_var = 0;
		double div_var = 0;
		Method03 m = new Method03(); // main 안에서 클래스를 객체화
		
		add_var = m.add(num1, num2);
		minus_var = m.minus(num1, num2);
		times_var = m.times(num1, num2);
		div_var = m.division(num1, num2);
		remainder_var = m.remainder(num1, num2);
		
		System.out.println("합계 : "+add_var+" 뺄셈 : "+minus_var+" 곱셈 : "+times_var);
		System.out.println("나눗셈 : "+div_var+" 나머지 : "+remainder_var);
		
	}

}
