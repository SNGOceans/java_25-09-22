package banking;

import java.util.Scanner;

public class BankMain {
    public static void main(String[] args) {
        Scanner scan = new Scanner(System.in);
        BankController controller = new BankController();

        while (true) {
            System.out.println("\n=== 은행 프로그램 ===");
            System.out.println("1. 로그인");
            System.out.println("2. 내 계좌 정보 보기");
            System.out.println("3. 입금");
            System.out.println("4. 출금");
            System.out.println("5. 이체");
            System.out.println("6. 전체 계좌 정보 보기");
            System.out.println("7. 종료");
            System.out.print("메뉴 선택: ");
            String choice = scan.nextLine();

            switch (choice) {
                case "1": controller.login(scan); break;
                case "2": controller.printMyAccountInfo(); break;
                case "3": controller.depositMoney(scan); break;
                case "4": controller.withdrawMoney(scan); break;
                case "5": controller.transferMoney(scan); break;
                case "6": controller.printaccountInfo(); break;         
                case "7": System.out.println("프로그램을 종료합니다."); return;
                default: System.out.println("잘못된 입력입니다. 다시 선택해주세요.");
            }
        }
    }
}
